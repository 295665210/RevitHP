<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevitHP"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="RevitHP.MainWindow"
        mc:Ignorable="d"
        Title="族库浏览" WindowStartupLocation="CenterOwner" Closing="Window_Closing" d:DesignWidth="725" d:DesignHeight="460" Icon="Pixadex.ico">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Palette.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <local:FamilyBrowserVM/>
    </Window.DataContext>
    <Grid>
        <StackPanel Height="55" VerticalAlignment="Top" Background="{StaticResource brTopBar}">
            <TextBlock TextWrapping="Wrap" Text="顶部区域，留给以后放菜单按钮等等" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,27,0,0"/>
        </StackPanel>
        <StackPanel Height="40" VerticalAlignment="Bottom" Background="{StaticResource brTopBar}">
            <TextBlock TextWrapping="Wrap" Text="底部区域，状态栏位置" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,14,0,0"/>
        </StackPanel>
        <!--树形结点-->
        <TreeView ItemsSource="{Binding TreeViewBinding}" Margin="2,60,0,45" Name="Treeview1" Width="155" HorizontalAlignment="Left" MouseRightButtonDown="Treeview1_MouseRightButtonDown" >
            <!--菜单-->
            <TreeView.ContextMenu>
                <ContextMenu >
                    <MenuItem Header="添加" Name="InputNode" Click="InputNode_Click"/>
                    <MenuItem Header="删除" Name="DeleteNode" Click="DeleteNode_Click"/>
                    <MenuItem Header="修改" Name="UpdateNode" Click="UpdateNode_Click"/>
                </ContextMenu>
            </TreeView.ContextMenu>
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <TextBlock  Text="{Binding Name}" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <Button Content="Button" HorizontalAlignment="Left" Margin="171,365,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" />
        <Button Content="注销" HorizontalAlignment="Left" Margin="262,365,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.253,0.211" Click="Button_Click_1"/>
        <!--<DataGrid Margin="157,60,219,45" Name="DataGridview1" ItemsSource="">
            <DataGrid.Columns>
                <DataGridTextColumn Header="awf" Width="80" />
                <DataGridTextColumn Header="颜色" Width="50"/>
                <DataGridTextColumn Header="ParentID" Width="50" />
            </DataGrid.Columns>
        </DataGrid>-->
    </Grid>
</Window>
