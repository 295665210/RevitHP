<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevitHP"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="RevitHP.MainWindow"
        mc:Ignorable="d"
        Title="族库浏览" WindowStartupLocation="CenterOwner" Closing="Window_Closing" d:DesignWidth="725" d:DesignHeight="460" Icon="Pixadex.ico">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Palette.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <local:FamilyBrowserVM/>
    </Window.DataContext>
    <Grid>
        <StackPanel Height="55" VerticalAlignment="Top" Background="{StaticResource brTopBar}">
            <TextBlock TextWrapping="Wrap" Text="顶部区域，留给以后放菜单按钮等等" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,27,0,0"/>
        </StackPanel>
        <StackPanel Height="40" VerticalAlignment="Bottom" Background="{StaticResource brTopBar}">
            <TextBlock TextWrapping="Wrap" Text="底部区域，状态栏位置" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,14,0,0"/>
        </StackPanel>

        <!-- 树形结点 -->
        <TreeView ItemsSource="{Binding TreeViewBinding}" Margin="29,60,548,45" Name="Treeview1" >
            <!-- 二级菜单数据 -->
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Items}">
                    <TextBlock Foreground="Red" Text="{Binding Name}" />
                    <!--三级菜单-->
                    <HierarchicalDataTemplate.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <TextBlock Text="{Binding Name}" />
                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name }" MouseDown="TreeView_MouseDoubleClick" />
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

    </Grid>
</Window>
